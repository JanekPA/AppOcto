<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/octopus_background3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        >

        <!-- Obraz cennika -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/pricingImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/octopus_cennik"
                android:scaleType="centerCrop"
                android:contentDescription="Obraz cennika" />

            <ImageButton
                android:id="@+id/zoomIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_zoom"
                android:contentDescription="PowiÄ™ksz obraz"
                 />
        </FrameLayout>


        <!-- Opis kontaktowy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JeÅ›li masz jakieÅ› dodatkowe pytania bÄ…dÅº znajdujesz coÅ› niejasnego - skontaktuj siÄ™ z nami!"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center" />

        <!-- Linki dynamiczne -->
        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Numer kontaktowy"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/gmail_icon"
                android:layout_marginEnd="8dp"
                android:contentDescription="Gmail icon" />

            <TextView
                android:id="@+id/contactMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
        <!-- Facebook z ikonÄ… -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fb_icon"
                android:layout_marginEnd="8dp"
                android:contentDescription="Facebook Icon" />

            <TextView
                android:id="@+id/contactFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Instagram z ikonÄ… -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/instagram_icon"
                android:layout_marginEnd="8dp"
                android:contentDescription="Instagram Icon" />

            <TextView
                android:id="@+id/contactInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
