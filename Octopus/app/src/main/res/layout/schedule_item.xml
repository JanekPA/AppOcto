<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_session_background"
    android:elevation="2dp">

    <!-- Tekstowa część: czas + tytuł -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Godzina"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa zajęć"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <TextView
            android:id="@+id/item_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poziom zaawansowania"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </LinearLayout>

    <!-- Ikona -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical">

        <!-- Tło ikony -->
        <ImageView
            android:id="@+id/favorite_button_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/favorite_background_default"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Obrazek na tle -->
        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/octopus_icon"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>
