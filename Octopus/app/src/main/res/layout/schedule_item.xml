<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Godzina"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa zajęć"
        android:textSize="16sp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical">

        <!-- Tło w postaci zasobu drawable -->
        <ImageView
            android:id="@+id/favorite_button_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/favorite_background_default"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Obrazek, który ma być widoczny na tle -->
        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/octopus_icon"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>
